<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary x:Class="UraniumUI.Resources.StyleResource"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
                    xmlns:local="clr-namespace:UraniumUI.Resources">

    <ResourceDictionary.MergedDictionaries>

        <ResourceDictionary>

            <Style TargetType="Page" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="{DynamicResource Background}"/>
            </Style>

            <Style TargetType="Label" ApplyToDerivedTypes="True">
                <Setter Property="TextColor" Value="{DynamicResource OnBackground}" />
            </Style>
        </ResourceDictionary>

    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>